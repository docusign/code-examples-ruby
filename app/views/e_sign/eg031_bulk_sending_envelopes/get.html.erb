          <label for= ""><%= @example["Forms"][bulk2_form_index]["Inputs"][signer_email_index]["InputName"] %></label >
          <input type = 'mail' name = "signerEmail2" id = "signerEmail2"
                 placeholder = "<%= @example["Forms"][bulk2_form_index]["Inputs"][signer_email_index]["InputPlaceholder"] %>"
                 required class='form-control'/>
        </div>
        <div class='form-group'>
          <label for= ""><%= @example["Forms"][bulk2_form_index]["Inputs"][signer_name_index]["InputName"] %></label >
          <input type = 'text' name = "signerName2" id = "signerName2"
                 placeholder = "<%= @example["Forms"][bulk2_form_index]["Inputs"][signer_name_index]["InputPlaceholder"] %>"
                 required class='form-control'/>
        </div>
        <div class='form-group'>
          <label for= ""><%= @example["Forms"][bulk2_form_index]["Inputs"][cc_email_index]["InputName"] %></label >
          <input type = 'mail' name = "ccEmail2" id = "ccEmail2"
                 placeholder = "<%= @example["Forms"][bulk2_form_index]["Inputs"][cc_email_index]["InputPlaceholder"] %>"
                 required class='form-control'/>
        </div>
        <div class='form-group'>
          <label for= ""><%= @example["Forms"][bulk2_form_index]["Inputs"][cc_name_index]["InputName"] %></label >
